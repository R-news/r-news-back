{
    "compilerOptions": {
      "allowJs": false,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "isolatedModules": true,
      "lib": ["ES2021"],
      "module": "CommonJS",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "target": "es2019",
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "@src/*": ["src/*"]
      },
      "esModuleInterop": true
    }
  }